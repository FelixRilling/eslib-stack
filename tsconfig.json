{
    "compilerOptions": {
        "moduleResolution": "node",
        "rootDir": "./",
        "baseUrl": "./",
        "target": "es2019",
        "esModuleInterop": true,
        "composite": true,
        "newLine": "LF",
        "removeComments": false,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./src/tsconfig.json"
        },
        {
            "path": "./spec/src/tsconfig.json"
        }
    ]
}
