{
    "name": "tslib-stack",
    "version": "14.3.0",
    "private": true,
    "license": "MIT",
    "description": "A small & flexible stack for building modern TypeScript libraries.",
    "keywords": [
        "stack",
        "ts"
    ],
    "author": {
        "name": "Felix Rilling",
        "email": "contact@rilling.dev",
        "url": "https://rilling.dev"
    },
    "homepage": "https://github.com/FelixRilling/tslib-stack#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/tslib-stack.git"
    },
    "bugs": {
        "url": "https://github.com/FelixRilling/tslib-stack/issues"
    },
    "main": "./dist/myLib.common.js",
    "module": "./dist/esm/src/main.js",
    "types": "./dist/esm/src/main.d.ts",
    "files": [
        "src/",
        "dist/",
        "docs/"
    ],
    "directories": {
        "lib": "./src/",
        "test": "./spec/",
        "doc": "./docs/"
    },
    "rollupOptions": {
        "moduleName": "myLib",
        "outputName": "myLib",
        "external": [],
        "globals": {}
    },
    "scripts": {
        "start": "npm run dist",
        "dist": "npm run clean && npm run lint && npm run build && npm run test && npm run docs",
        "clean": "rimraf ./dist ./spec/dist ./docs",
        "build": "npm run build:tsc && npm run build:bundle",
        "build:tsc": "tsc --build ./tsconfig.json",
        "build:bundle": "rollup -c rollup.config.js",
        "lint": "eslint ./src/ ./spec/src/ --ext .ts",
        "fix": "eslint ./src/ ./spec/src/ --ext .ts --fix",
        "test": "npm run build:tsc && npm run test:jasmine",
        "test:jasmine": "jasmine --require=source-map-support/register",
        "docs": "typedoc ./src/"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^8.0.1",
        "@types/jasmine": "^3.5.10",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.1.0",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "jasmine": "^3.5.0",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.13.1",
        "source-map-support": "^0.5.19",
        "ts-mockito": "^2.5.0",
        "typedoc": "^0.17.7",
        "typescript": "^3.9.5"
    }
}
