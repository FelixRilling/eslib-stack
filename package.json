{
    "name": "tslib-stack",
    "version": "14.0.0",
    "private": true,
    "description": "A small & flexible stack for building modern TypeScript libraries.",
    "main": "./dist/myLib.common.js",
    "module": "./dist/esm/src/main.js",
    "types": "./dist/esm/src/main.d.ts",
    "rollupOptions": {
        "moduleName": "myLib",
        "outputName": "myLib",
        "external": [],
        "globals": {}
    },
    "scripts": {
        "start": "npm run dist",
        "build": "npm-run-all build:tsc build:bundle",
        "build:tsc": "tsc --build ./tsconfig.json",
        "build:tsc:watch": "tsc --build ./tsconfig.json -w",
        "build:bundle": "rollup -c rollup.config.js",
        "watch": "build:tsc:watch",
        "dist": "npm-run-all lint test build docs",
        "lint": "eslint ./src/ ./spec/src/ --ext .ts",
        "fix": "eslint ./src/ ./spec/src/ --ext .ts --fix",
        "test": "jasmine",
        "docs": "jsdoc -c jsdoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/tslib-stack.git"
    },
    "keywords": [
        "stack",
        "ts"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/tslib-stack/issues"
    },
    "homepage": "https://github.com/FelixRilling/tslib-stack#readme",
    "devDependencies": {
        "@types/jasmine": "^3.4.4",
        "@typescript-eslint/eslint-plugin": "^2.4.0",
        "@typescript-eslint/parser": "^2.4.0",
        "docdash": "^1.1.1",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-prettier": "^3.1.1",
        "jasmine": "^3.5.0",
        "jsdoc": "^3.6.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "rollup": "^1.24.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "typescript": "^3.6.4"
    }
}
