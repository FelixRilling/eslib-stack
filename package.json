{
    "name": "tslib-stack",
    "version": "v13.0.0",
    "description": "A small & flexible stack for building modern TypeScript libraries.",
    "main": "./dist/myLib.common.js",
    "module": "./dist/myLib.esm.js",
    "types": "./dist/types/main.d.ts",
    "settings": {
        "namespace": {
            "module": "myLib",
            "file": "myLib"
        },
        "external": [],
        "browser": {
            "enabled": true,
            "globals": {}
        }
    },
    "scripts": {
        "start": "npm-run-all lint build test docs",
        "build": "rollup -c ./tasks/rollup.config.js",
        "build:test": "rollup -c ./tasks/rollup.config.test.js",
        "watch": "rollup -c ./tasks/rollup.config.js --watch",
        "dist": "npm-run-all build test docs",
        "lint": "eslint ./src/**/*.ts ./spec/**/*.ts",
        "fix": "eslint ./src/**/*.ts ./spec/**/*.ts --fix",
        "test": "npm-run-all build:test test:jasmine",
        "test:jasmine": "jasmine",
        "docs": "jsdoc -c jsdoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/tslib-stack.git"
    },
    "keywords": [
        "stack",
        "ts"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/tslib-stack/issues"
    },
    "homepage": "https://github.com/FelixRilling/tslib-stack#readme",
    "devDependencies": {
        "@types/jasmine": "^3.3.16",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "docdash": "^1.1.1",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "jasmine": "^3.4.0",
        "jsdoc": "^3.6.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "rollup": "^1.18.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-typescript2": "^0.22.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3"
    }
}
