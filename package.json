{
    "name": "tslib-stack",
    "version": "14.1.0",
    "private": true,
    "description": "A small & flexible stack for building modern TypeScript libraries.",
    "main": "./dist/myLib.common.js",
    "module": "./dist/esm/src/main.js",
    "types": "./dist/esm/src/main.d.ts",
    "rollupOptions": {
        "moduleName": "myLib",
        "outputName": "myLib",
        "external": [],
        "globals": {}
    },
    "scripts": {
        "start": "npm run dist",
        "dist": "npm-run-all clean lint build test:jasmine docs",
        "clean": "rimraf ./dist ./spec/dist ./docs",
        "build": "npm-run-all build:tsc build:bundle",
        "build:tsc": "tsc --build ./tsconfig.json",
        "build:bundle": "rollup -c rollup.config.js",
        "watch": "tsc --build ./tsconfig.json -w",
        "lint": "eslint ./src/ ./spec/src/ --ext .ts",
        "fix": "eslint ./src/ ./spec/src/ --ext .ts --fix",
        "test": "npm-run-all build test:jasmine",
        "test:jasmine": "jasmine --require=source-map-support/register",
        "docs": "typedoc ./src/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/tslib-stack.git"
    },
    "keywords": [
        "stack",
        "ts"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/tslib-stack/issues"
    },
    "homepage": "https://github.com/FelixRilling/tslib-stack#readme",
    "devDependencies": {
        "@types/jasmine": "^3.5.2",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jasmine": "^3.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.1",
        "rollup": "^1.31.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "source-map-support": "^0.5.16",
        "typedoc": "^0.16.8",
        "typescript": "^3.7.5"
    }
}
